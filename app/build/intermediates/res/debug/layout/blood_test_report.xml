<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <RelativeLayout
            android:id="@+id/top"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#20AF65" >

            <TextView
                android:id="@+id/now_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="您当前不在队列中"
                android:textColor="#ffffff"
                android:textSize="15sp" />

<!--             <TextView
                android:id="@+id/quene_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/now_ing"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="您前面还有：  8 人"
                android:textColor="#ffffff"
                android:textSize="15sp" /> -->
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/IM_divider_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/divider_horizontal_line" />

        <ImageView
            android:id="@+id/IM_bg_header_top"
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:layout_below="@+id/IM_divider_horizontal_line"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_header_top" />

        <ImageView
            android:id="@+id/IM_bg_header_top1"
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/IM_divider_horizontal_line"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_header_top" />

        <ImageButton
            android:id="@+id/Ib_left"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/Tv_Blood_test_report"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/leftarrow" />

        <TextView
            android:id="@+id/Tv_Blood_test_report"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IM_divider_horizontal_line"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/Blood_test_report"
            android:textColor="#323232"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/IM_line_x"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/Tv_Blood_test_report"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/line_x" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/report" />
    </RelativeLayout>

